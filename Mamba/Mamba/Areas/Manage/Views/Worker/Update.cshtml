@model UpdateWorkerVM

<div class="card-body">
    <h4 class="card-title">Update</h4>
   
    <form class="forms-sample" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input  asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Position">Position</label>
            <input asp-for="Position" class="form-control" id="exampleInputName1" placeholder="Position">
            <span asp-validation-for="Position"></span>
        </div>
        <div class="form-group">
            <label asp-for="Photo">Photo</label>
            <input asp-for="Photo" class="form-control" id="exampleInputName1" placeholder="Photo">
            <span asp-validation-for="Photo"></span>
        </div>
        
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <button class="btn btn-light">Cancel</button>
    </form>
</div>