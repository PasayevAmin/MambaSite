@model PaginationVM<Worker>
@{
    int count = 1;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Worker Table</h4>
            <a asp-controller="worker" asp-action="create" class="btn btn-success">Create</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Position
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.items)
                        {
                            <tr>
                                <td>
                                    @(count++)
                                </td>
                                <td>
                                    <img style="width:100px;height:100px" src="~/assets/images/slider/@item.Image">
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Position
                                </td>
                                <td>
                                    <a asp-controller="worker" asp-action="update" asp-route-Id="@item.Id" class="btn btn-warning btn-info"><i class="mdi mdi-border-color"></i></a>
                                    <a asp-controller="worker" asp-action="delete" asp-route-Id="@item.Id" class="btn btn-danger btn-info"><i class="mdi mdi-delete-sweep"></i></a>
                                    <a asp-controller="worker" asp-action="details" asp-route-Id="@item.Id" class="btn btn-primary"><i class="mdi mdi-book-open-variant"></i></a>
                                </td>

                            </tr>


                        }
                    </tbody>
                </table>
            </div>
            <nav aria-label="...">
                <ul class="pagination">
                    <li class="page-item @(Model.CurrentPage<=1?"disabled":"")">
                        <a class="page-link" asp-route-page="@(Model.CurrentPage-1)" asp-action="index" asp-controller="worker">Previous</a>
                    </li>
                    @for (int i = 0; i < Model.TotalPage; i++)
                    {
                        <li class="page-item @(Model.CurrentPage-1==i?"active":"")" aria-current="page">
                            <a class="page-link" asp-route-page="@(i+1)" asp-action="index" asp-controller="worker">@(i + 1)</a>
                        </li>
                    }
                    <li class="page-item @(Model.TotalPage<=Model.CurrentPage?"disabled":"")">
                        <a class="page-link" asp-route-page="@(Model.CurrentPage+1)" asp-action="index" asp-controller="worker" >Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>